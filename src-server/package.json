{
  "name": "src-server",
  "scripts": {
    "build": "pyinstaller --name server entry.py",
    "dev": "watchmedo auto-restart --patterns=\"*.py;*.html;*.css\" --recursive -- python entry.py",
    "alembic-generate": "alembic upgrade head && alembic revision --autogenerate",
    "install-deps": "pip install -r requirements.txt",
    "install-dev-deps": "pip install -r requirements-dev.txt",
    "test": "pytest",
    "test-cov": "pytest --cov=src tests/"
  }
}